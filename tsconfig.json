{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": false,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "noImplicitUseStrict": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "inlineSourceMap": true,
    "outDir": "./tmp/",
    "allowJs": true,
    "jsx": "react",
    "removeComments": false,
    "baseUrl": ".",
    "paths": {
      "*": [
        "src/*"
      ]
    },
    "lib": [
      "dom", 
      "es2015", 
      "es2016"
    ]
  },
  "exclude": [
    "node_modules",
    "tmp",
    "bin",
    "build",
    "dist",
    "buildConfigurations",
    "gradle",
    "legacyResources",
    "libs"
  ],
  "filesGlob" : [
    "**/*.ts",
    "**/*.tsx",
    "!node_modules/**",
    "!tmp/**",
    "!dist/**"
  ]
}
